{
  "compilerOptions": {
    "target": "es2022",
    "module": "nodenext",                     // Critical
    "moduleResolution": "nodenext",          // Must match above
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "emitDeclarationOnly": false
  },
  "ts-node": {
    "esm": true                              // This enables ESM in ts-node
  },
  "include": ["."]
}