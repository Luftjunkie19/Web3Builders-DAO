{
  "compilerOptions": {
    "target": "es2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "skipLibCheck": true,
    "allowImportingTsExtensions": false,
    "noEmit": false
  },
  "ts-node": {
    "esm": true
  },
  "include": ["."]
}
